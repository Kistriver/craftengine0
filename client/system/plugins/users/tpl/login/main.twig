{%extends "/tpl/html/main.twig"%}

{%block title%}Вход{{parent()}}{%endblock%}

{%block header%}<li class="active">Вход</li>{%endblock%}

{%block content%}
<form method="post" action="{{MAIN.ROOT_HTTP}}login">

<div class="row">
<div class="col-md-6 col-md-offset-3">
<div class="input-group">
<span class="input-group-addon">@</span>
<input name="email" maxlength="100" type="text" class="form-control" placeholder="Адрес электронной почты">
</div>
</div>
</div>

<div class="row">
<div class="col-md-6 col-md-offset-3">
<div class="input-group">
<span class="input-group-addon">&#182;</span>
<input name="password" maxlength="100" type="password" class="form-control" placeholder="Пароль">
</div>
</div>
</div>

<div class="row">
<div class="col-md-6 col-md-offset-3">
<input type="submit" style="width: 100%;" class="btn btn-success" value="Есть контакт!" />
</div>
</div>
</form>

<div class="row">
<div class="col-md-6 col-md-offset-3">
<form action="{{MAIN.ROOT_HTTP}}login/restore">
<button style="width: 100%;" class="btn btn-warning">
Забыл пароль
</button>
</form>
</div>
</div>
{%endblock%}