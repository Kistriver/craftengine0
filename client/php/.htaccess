ErrorDocument 404 /system/404.php
ErrorDocument 403 /system/403.php
AddType application/octet-stream .rar .doc .mov .avi .pdf .xls .mp4 .jar .bat
AddType application/x-httpd-php .php
AddDefaultCharset utf-8
DefaultLanguage ru-RU
ServerSignature Off
#php_flag display_errors off
php_flag display_errors on
php_value upload_max_filesize 32M
#php_value user_agent “Mozilla/4.0 (compatible; MSIE 6.0; Windows NT 5.1)”

Options All -ExecCGI -Indexes -Includes +FollowSymLinks

<ifModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml application/xml application/xhtml+xml text/css text/javascript application/javascript application/x-javascript application/json
</ifModule>

RewriteEngine on

RewriteRule ^robots.txt$ robots.txt.php [L]
RewriteRule ^sitemap.xml$ sitemap.xml.php [L]

RewriteRule ^index.php$ articles.php [L]

RewriteRule ^article([0-9]*)_([0-9]*)$ articles.php?user_id=$1&post_id=$2 [L]

RewriteRule ^logout$ login.php?act=logout [L]

RewriteRule ^users$ users.php?act=all&page=1 [L]
RewriteRule ^users/id([0-9]+)$ users.php?act=user&id=$1 [L]
RewriteRule ^users/([A-Za-z0-9_]+)$ users.php?act=user&login=$1 [L]

RewriteRule ^(([^/]+/)*[^.]+)$ $1.php [L]
